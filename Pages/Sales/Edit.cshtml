@page
@model Avram_Alin_Proiect.Pages.Sales.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Sale</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Sale.ID" />
            <div class="form-group">
                <label asp-for="Sale.Customer" class="control-label"></label>
                <select asp-for="Sale.CustomerID" class="form-control" asp-items="ViewBag.CustomerID"></select>
                <span asp-validation-for="Sale.CustomerID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sale.AutoPart" class="control-label"></label>
                <select asp-for="Sale.AutoPartID" class="form-control" asp-items="ViewBag.AutoPartID"></select>
                <span asp-validation-for="Sale.AutoPartID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sale.SaleDate" class="control-label"></label>
                <input asp-for="Sale.SaleDate" class="form-control" />
                <span asp-validation-for="Sale.SaleDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
